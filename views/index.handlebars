<h1>Burgers</h1>
<h2>Burgers That have not been eatan</h2>
<ul>
    {{#each burger}} 
      {{#unless devoured}}
        <li class="change-devoured" data-id="{{this.id}}"> {{burgers_name}} {{devoured}} {{id}}</li>
      {{/unless}} 
    {{/each}}
</ul>
<h2>Burgers That have been eaten</h2>
<ul>
    {{#each burger}} {{#if devoured}}
    <li> {{burgers_name}} {{devoured}} {{id}}</li>
    {{/if}} {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burgers_name">
    </div>

    <button type="submit">Add Burger</button>
</form>

